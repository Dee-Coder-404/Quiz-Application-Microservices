package com.question.microservice.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.question.microservice.entity.Question;
import com.question.microservice.repositories.QuestionRepo;

@Service
public class QuestionImplementation implements QuestionService {
	
	@Autowired
	private QuestionRepo questionrepo;
	
	@Override
	public Question create(Question question) {
		// TODO Auto-generated method stub
		return questionrepo.create(question);
	}

	@Override
	public List<Question> getAll() {
		// TODO Auto-generated method stub
		return questionrepo.findAll();
	}

	@Override
	public Question getById(Long id) {
		// TODO Auto-generated method stub
		return null;
	}

}
